
<%- include("partials/header"); -%>
    <h1>Create a new entry</h1>
    <form class="" action="/new-entry" method="post">
      <div class="form-group">
        <div class="row">
          <div class="col-lg-6 col-md-6 col-sm-6">
            <label>Title</label>
            <input class="form-control" type="text" name="postTitle">
          </div>
        </div>
        <div class="row">
          <div class="col-lg-6 col-md-6">
            <label>Date</label>
            <input class="form-control  w-50" name="postDate" type="datetime-local"></input>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <label>Post</label>
            <textarea class="form-control" name="postBody" rows="5" cols="30"></textarea>
          </div>
        </div>
      </div>
      <input type="hidden" name="userName" value="<%= loggedUserName %>"> </>
      <button class="btn btn-primary" type="submit" name="button">Publish</button>
    </form>

<%- include("partials/footer"); -%>
